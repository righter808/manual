$(function(){$(".right-nav").click(function(){if($(".nav-box").css("display")=="block"){$(".nav-close").click()}var a=Math.max(688,$(window).height());$(".right-nav-box").css("height",a);$.ajax({type:"GET",dataType:"jsonp",jsonp:"callback",jsonpCallback:"userHandler",url:login+"/passport",success:function(b){if(b.fmorders==0&&b.maorders!=0){$(".right-nav-ul a").attr("href",conurl+"/mobile/mallwaitorder/")}if(b.islogin==true){$(".right-nav-ul span[name=account]").html(b.account);$(".right-nav-ul span[name=userid]").html(b.userid);$(".right-nav-ul span[name=credit]").html(b.credit+'<em style="margin-left: 2px;">\u5143</em>');$(".right-nav-ul span[name=orders]").html('<i class="mobile-iconfont" style="margin-left: 1px;margin-right: -4px;">&#xe60c;</i>');if(b.orders!=0){$(".right-nav-ul span[name=orders]").html(b.orders+'<i class="mobile-iconfont" style="margin-left: 1px;margin-right: -4px;">&#xe60c;</i>')}$(".right-nav-ul span[name=realname]").html(b.realstatus+'<i class="mobile-iconfont" style="margin-left: 1px;">&#xe60c;</i>');$("#login_account").html('<li style="float:none; margin: 0 auto"><a href="'+conurl+'/passport/logout" class="btn">\u9000\u51fa\u5f53\u524d\u5e10\u53f7</a></li>')}else{$("#login_account").html('<li><a href="'+login+'/login/?tplname=mobile" class="btn btn-primary">\u767b\u5f55</a></li><li><a href="'+login+'/register/" class="btn">\u6ce8\u518c</a></li>')}}});$(".right-nav-box").toggle();$("header").toggleClass("pa");$("html").toggleClass("noscroll noscroll-long")});$(".right-nav-close").click(function(){$(".right-nav-box").hide();$("header").removeClass("pa");$("html").removeClass("noscroll noscroll-long")});$(".left-nav").click(function(){var b=$(this).data("noshow")||0;if(b==1){return}if($(".right-nav-box").css("display")=="block"){$(".right-nav-close").click()}var a=Math.max(688,$(window).height());$(".nav-box").css("height",a);$(".nav-box").toggle();$("header").toggleClass("pa");$("html").toggleClass("noscroll noscroll-long")});$(".nav-close").click(function(){$(".nav-box").hide();$("header").removeClass("pa");$("html").removeClass("noscroll noscroll-long")});$(".tabs-bar ul li").click(function(a){$(this).addClass("current").siblings().removeClass("current");$(".main-body .tabs-toggle").eq($(this).index()).show().siblings().hide()});$(window).scroll(function(){if($(window).scrollTop()>40){$(".nav-tabs").addClass("fixed-nav-tabs")}else{$(".nav-tabs").removeClass("fixed-nav-tabs")}});$(".sun-right").click(function(a){$(".nav-tabs ul").stop().slideToggle(300,function(){if($(this).is(":hidden")){$(".sun-right i").html("&#xe662;")}else{$(".sun-right i").html("&#xe661;")}})});$(".left-nav .iconfont").click(function(a){$(".left-nav ul").toggle(30,function(){$(".modal").height($(document).height());if($(this).is(":hidden")){$(".modal").hide(30,function(){$("body").css({overflowY:"visible"})})}else{$(".modal").show(30,function(){$("body").css({overflowY:"hidden"})})}});$(".modal").click(function(b){$(this).hide(30,function(){$("body").css({overflowY:"visible"});$("body").unbind("touchmove")});$(".left-nav ul").hide()})});$("#close").click(function(a){$(".section-float-bar").hide()})});
